        xmlns:vm="clr-namespace:CalcApp.ViewModels"
        xmlns:cv="clr-namespace:CalcApp.Views"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <vm:CalcViewModel x:Key="cvm" />
        
    </Window.Resources>
    <DockPanel DataContext="{StaticResource cvm}">
